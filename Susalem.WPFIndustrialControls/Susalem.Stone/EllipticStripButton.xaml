<UserControl
    x:Class="Susalem.Stone.EllipticStripButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Susalem.Stone"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="410"
    Height="60"
    mc:Ignorable="d">
    <Border
        Margin="5"
        Background="White"
        CornerRadius="25">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Opacity="0.8"
                ShadowDepth="0"
                Color="#AAAAAA" />
        </Border.Effect>
        <StackPanel Margin="20,0,0,0" Orientation="Horizontal">
            <RadioButton
                Width="50"
                Height="50"
                Content="画笔"
                Cursor="Hand">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="txt" Property="Foreground" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton
                Width="50"
                Height="50"
                Content="矩形"
                Cursor="Hand">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="txt" Property="Foreground" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton
                Width="50"
                Height="50"
                Content="文本"
                Cursor="Hand">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="txt" Property="Foreground" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton
                Width="50"
                Height="50"
                Content="箭头"
                Cursor="Hand">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="txt" Property="Foreground" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <RadioButton
                Width="50"
                Height="50"
                Content="图片"
                Cursor="Hand">
                <RadioButton.Template>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="Transparent">
                            <TextBlock
                                x:Name="txt"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter TargetName="txt" Property="Foreground" Value="red" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </RadioButton.Template>
            </RadioButton>
            <Border
                Margin="10,0,0,0"
                BorderBrush="#999999"
                BorderThickness="1,0,0,0" />
            <Button
                Name="btn_upload"
                Width="50"
                Height="50"
                Margin="0,0,0,0"
                Click="btn_upload_Click"
                Content="上传"
                Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                Name="btn_close"
                Width="50"
                Height="50"
                Margin="0,0,0,0"
                Click="btn_close_Click"
                Content="关闭"
                Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                FontSize="18"
                                Foreground="#666666"
                                Text="{TemplateBinding Content}"
                                TextAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
